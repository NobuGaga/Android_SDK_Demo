     <LinearLayout
        android:id="@+id/ewan_supersdk_dialog_cancel_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
       android:layout_marginTop="15.0dip" 
        android:layout_below="@+id/ewan_supersdk_custom_dialog_title_layout"
        android:orientation="horizontal" 
        android:clickable="true" >           

        <TextView
            android:id="@+id/ewan_supersdk_dialog_cancel_message"
            android:layout_width="fill_parent"
            android:layout_height="160dip"
            android:gravity="center|left"
            android:lineSpacingMultiplier="1.5"
            android:singleLine="false"
            android:textColor="@color/ewan_supersdk_white"
            android:textSize="18dp"
            android:maxLines="30"
            android:scrollbars="vertical"
            android:clickable="true"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_below="@+id/ewan_supersdk_dialog_cancel_message_layout"      
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ewan_supersdk_dialog_cancel_positiveButton"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:background="@drawable/ewan_supersdk_orange_btn"
                android:gravity="center"
                android:text="@string/ewan_supersdk_sure" 
                android:textColor="@color/ewan_supersdk_white"/>
            
            <Button
                android:id="@+id/ewan_supersdk_dialog_cancel_negativeButton"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:background="@drawable/ewan_supersdk_dialog_pay_exit_cancel_btn"
                android:gravity="center"
                android:text="@string/ewan_supersdk_cancel" 
                android:textColor="@color/ewan_supersdk_white"/>
        </LinearLayout>
    </RelativeLayout>
    
