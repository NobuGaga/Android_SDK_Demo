<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ewan_supersdk_black"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ewan_supersdk_shape_convert_dialog_input_bg"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/ewan_supersdk_convert_dialog_input_tip_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:lineSpacingMultiplier="1.2"
            android:text="修改用户名 (仅可修改一次) 不能是纯数字"
            android:textColor="@color/ewan_supersdk_convert_font_gray"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ewan_supersdk_shape_convert_input_bar"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ewan_supersdk_convert_dialog_input_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/ewan_supersdk_limit_account"
                android:hint="用户名"
                android:maxLength="20"
                android:paddingLeft="14dp"
                android:singleLine="true"
                android:textColor="@color/ewan_supersdk_white"
                android:textColorHint="@color/ewan_supersdk_convert_font_gray"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/ewan_supersdk_convert_dialog_input_delete_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ewan_supersdk_cw_delete_btn"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/ewan_supersdk_convert_dialog_input_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ewan_supersdk_shape_convert_text_bottom_line"
                android:paddingBottom="2dp"
                android:paddingTop="5dp"
                android:text="确定"
                android:textColor="@color/ewan_supersdk_convert_font_yellow"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/ewan_supersdk_convert_dialog_input_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_toLeftOf="@id/ewan_supersdk_convert_dialog_input_right_btn"
                android:paddingBottom="2dp"
                android:paddingTop="5dp"
                android:text="取消"
                android:textColor="@color/ewan_supersdk_convert_font_gray"
                android:textSize="18dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
