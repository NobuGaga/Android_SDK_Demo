<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/ewan_supersdk_convert_register_phone_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ewan_supersdk_cw_back_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical|left"
            android:text="手机注册"
            android:textColor="@color/ewan_supersdk_white"
            android:textSize="16dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/ewan_supersdk_convert_register_phone_et"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:background="@drawable/ewan_supersdk_shape_convert_input_bar"
        android:hint="手机号"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="14dp"
        android:textColor="@color/ewan_supersdk_white"
        android:textColorHint="@color/ewan_supersdk_convert_font_gray"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ewan_supersdk_convert_register_phone_code_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ewan_supersdk_shape_convert_input_bar"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="5"
            android:paddingLeft="14dp"
            android:textColor="@color/ewan_supersdk_white"
            android:textColorHint="@color/ewan_supersdk_convert_font_gray"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/ewan_supersdk_convert_register_phone_get_code_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ewan_supersdk_selector_convert_yellow_btn"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/ewan_supersdk_convert_account_bg"
            android:textSize="16dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/ewan_supersdk_convert_register_phone_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/ewan_supersdk_selector_convert_yellow_btn"
        android:text="注册"
        android:textColor="@color/ewan_supersdk_convert_account_bg"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ewan_supersdk_convert_register_phone_user_agreement_cb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/ewan_supersdk_selector_convert_round_cb"
            android:checked="true"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/ewan_supersdk_convert_register_phone_user_agreement_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="注册即表示您同意"
            android:textColor="@color/ewan_supersdk_convert_font_gray"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/ewan_supersdk_convert_register_phone_user_agreement_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="《益玩用户协议》"
            android:textColor="@color/ewan_supersdk_white"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>