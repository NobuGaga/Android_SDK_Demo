<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AA000000">

    <LinearLayout
        android:id="@+id/ewan_supersdk_checkbindrole_background"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ewan_supersdk_bindrole_bg_main"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/ewan_supersdk_checkbindrole_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal|bottom"
                android:text="验证绑定"
                android:textColor="@color/ewan_supersdk_bindrole_font_color"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/ewan_supersdk_checkbindrole_iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ewan_supersdk_checkbindrole_tv_title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ewan_supersdk_bindrole_bg_title"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ewan_supersdk_checkbindrole_ll_phone_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ewan_supersdk_checkbindrole_tv_phone_tip"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical|right"
                android:text="输入手机号:"
                android:textColor="@color/ewan_supersdk_bindrole_font_color"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ewan_supersdk_checkbindrole_et_phone"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ewan_supersdk_bindrole_bg_input"
                    android:hint="点此输入手机号"
                    android:inputType="number"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:textSize="14dp"/>

                <Button
                    android:id="@+id/ewan_supersdk_checkbindrole_btn_get_verification_code"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ewan_supersdk_bindrole_btn_selector"
                    android:text="获取验证码"
                    android:textColor="@color/ewan_supersdk_bindrole_font_color"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ewan_supersdk_checkbindrole_ll_code_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ewan_supersdk_checkbindrole_tv_code_tip"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical|right"
                android:text="输入验证码:"
                android:textColor="@color/ewan_supersdk_bindrole_font_color"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ewan_supersdk_checkbindrole_et_code"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ewan_supersdk_bindrole_bg_input"
                    android:hint="点此输入验证码"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:textSize="14dp"/>

                <Button
                    android:id="@+id/ewan_supersdk_checkbindrole_btn_check"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ewan_supersdk_bindrole_btn_selector"
                    android:text="验证绑定"
                    android:textColor="@color/ewan_supersdk_bindrole_font_color"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ewan_supersdk_checkbindrole_btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/ewan_supersdk_checkbindrole_background"
        android:layout_alignTop="@id/ewan_supersdk_checkbindrole_background"
        android:layout_marginRight="-20dp"
        android:layout_marginTop="-20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ewan_supersdk_bindrole_btn_close"/>

</RelativeLayout>